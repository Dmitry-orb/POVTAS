@model IEnumerable<POVTAS_OSU.Models.ChairConsist>

@{
    ViewBag.Title = "Index";
}

<h2>Состав кафедры</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table text-white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatronymicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkExperience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AcademicDegree.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AcademicTitle.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatronymicName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.WorkExperience)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AcademicDegree.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AcademicTitle.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Activity.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Position.Title)
    </td>
    <td>
        <img src="@item.Photo" width="100px" height="110px" />
    </td>
    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
